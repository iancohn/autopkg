<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
	<dict>
		<key>Description</key>
		<string>Downloads the latest version of HP Printer Essentials Software</string>
		<key>Identifier</key>
		<string>com.github.iancohn.bigfix.HPPrinterEssentials</string>
		<key>Input</key>
		<dict/>
		<key>MinimumVersion</key>
		<string>1.0</string>
		<key>ParentRecipe</key>
		<string>com.github.iancohn.download.HPPrinterEssentials</string>
		<key>Process</key>
		<array>
			<dict>
				<key>Processor</key>
				<string>FlatPkgUnpacker</string>
				<key>Arguments</key>
				<dict>
					<key>flat_pkg_path</key>
					<string>%pathname%</string>
					<key>destination_path</key>
					<string>%RECIPE_CACHE_DIR%/HPPrinterEssentials</string>
					<key>purge_destination</key>
					<true/>
				</dict>
			</dict>
			<dict>
				<key>Processor</key>
				<string>FileFinder</string>
				<key>Arguments</key>
				<dict>
						<key>pattern</key>
						<string>%RECIPE_CACHE_DIR%/HPPrinterEssentials/com.hp.print.ps.support.*.cpe.pkg/Payload</string>
				</dict>
			</dict>
			<dict>
				<key>Processor</key>
				<string>PkgPayloadUnpacker</string>
				<key>Arguments</key>
				<dict>
					<key>pkg_payload_path</key>
					<string>%found_filename</string>
					<key>destination_path</key>
					<string>%RECIPE_CACHE_DIR%/HPPrinterDrivers</string>
					<key>purge_destination</key>
					<true/>
				</dict>
			</dict>
			<dict>
				<key>Processor</key>
				<string>EndOfCheckPhase</string>
			</dict>
		</array>
	</dict>
</plist>
